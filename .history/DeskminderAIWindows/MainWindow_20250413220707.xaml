<Window x:Class="DeskminderAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskminderAI"
        xmlns:viewmodels="clr-namespace:DeskminderAI.ViewModels"
        xmlns:converters="clr-namespace:DeskminderAI.Converters"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="DeskminderAI" 
        Height="50" 
        Width="50"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        MouseDown="Window_MouseDown"
        Closing="Window_Closing">
    
    <Window.Resources>
        <converters:SliderValueToWidthConverter x:Key="SliderValueToWidthConverter"/>
        <viewmodels:MainViewModel x:Key="MainVM"/>
    </Window.Resources>
    
    <Window.DataContext>
        <StaticResource ResourceKey="MainVM"/>
    </Window.DataContext>
    
    <Grid>
        <!-- Floating Add Button (Icon-only mode) -->
        <Button x:Name="AddButtonOnly" 
                Style="{StaticResource CircleButtonStyle}" 
                Visibility="Visible"
                Click="FloatingAddButton_Click"
                ToolTip="Add Reminder">
            <Grid>
                <Path Data="M12,2 L12,22 M2,12 L22,12" 
                      Stroke="White" 
                      StrokeThickness="2"/>
            </Grid>
        </Button>
        
        <!-- Main Widget Area (Full UI mode) -->
        <Border x:Name="MainBorder"
                CornerRadius="12" 
                Background="{StaticResource BackgroundBrush}" 
                Margin="10"
                Padding="10"
                BorderThickness="1"
                Visibility="Collapsed"
                BorderBrush="#444444">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Title and Settings Button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="DeskminderAI" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextBrush}" 
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1" 
                            Content="⚙" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Width="32" 
                            Height="32"
                            Margin="10,0,10,0"
                            ToolTip="Settings"
                            Command="{Binding ShowSettingsCommand}"/>
                    
                    <Button Grid.Column="2" 
                            Content="✕" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Width="32" 
                            Height="32"
                            Background="#444444"
                            ToolTip="Minimize to icon only"
                            Click="MinimizeButton_Click"/>
                </Grid>
                
                <!-- Content Area -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Reminders List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Reminders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#333333" 
                                            CornerRadius="8" 
                                            Margin="0,0,0,8" 
                                            Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Timer Circle -->
                                            <Border Grid.Column="0" 
                                                    Width="40" 
                                                    Height="40" 
                                                    CornerRadius="20" 
                                                    Background="{Binding IsCompleted, Converter={StaticResource BoolToCompletedBrushConverter}}">
                                                <TextBlock Text="{Binding TimeLeft}" 
                                                           FontFamily="Consolas" 
                                                           FontWeight="Bold" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center" 
                                                           Foreground="White"
                                                           FontSize="10"/>
                                            </Border>
                                            
                                            <!-- Reminder Name -->
                                            <StackPanel Grid.Column="1" 
                                                        Margin="12,0,0,0" 
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                           Foreground="White" 
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Minutes, StringFormat='{}{0} minute reminder'}" 
                                                           Foreground="#AAAAAA" 
                                                           FontSize="11"/>
                                            </StackPanel>
                                            
                                            <!-- Delete Button -->
                                            <Button Grid.Column="2" 
                                                    Style="{StaticResource CloseButtonStyle}" 
                                                    VerticalAlignment="Top" 
                                                    HorizontalAlignment="Right"
                                                    Command="{Binding DataContext.RemoveReminderCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Add Reminder Button -->
                    <Button Grid.Row="1" 
                            Style="{StaticResource CircleButtonStyle}" 
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Command="{Binding ShowAddReminderCommand}"
                            ToolTip="Add Reminder">
                        <Path Data="M12,2 L12,22 M2,12 L22,12" 
                              Stroke="White" 
                              StrokeThickness="2"/>
                    </Button>
                </Grid>
                
                <!-- Add Reminder Panel -->
                <Border Grid.Row="1" 
                        Background="#1A1A1A" 
                        CornerRadius="8" 
                        Visibility="{Binding IsAddingReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <TextBlock Grid.Row="0" 
                                   Text="Add New Reminder" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextBrush}" 
                                   FontSize="16"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Name Input -->
                        <TextBox Grid.Row="1"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Text="{Binding NewReminderName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,15"
                                 Height="36"/>
                        
                        <!-- Duration Slider -->
                        <Grid Grid.Row="2" Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Duration (minutes)" 
                                       Foreground="#AAAAAA" 
                                       Margin="0,0,0,5"/>
                            
                            <Grid Grid.Row="1">
                                <Slider Value="{Binding NewReminderMinutes}" 
                                        Style="{StaticResource SliderStyle}"/>
                                <TextBlock Text="{Binding NewReminderMinutes}" 
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Center" 
                                           Foreground="{StaticResource PrimaryBrush}" 
                                           FontWeight="Bold"/>
                            </Grid>
                        </Grid>
                        
                        <!-- Buttons -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Content="Cancel" 
                                    Style="{StaticResource RoundedButtonStyle}" 
                                    Background="#444444" 
                                    Margin="0,0,5,0"
                                    Command="{Binding CancelAddReminderCommand}"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Add" 
                                    Style="{StaticResource RoundedButtonStyle}" 
                                    Margin="5,0,0,0"
                                    Command="{Binding AddReminderCommand}"/>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Settings Panel -->
                <Border Grid.Row="1" 
                        Background="#1A1A1A" 
                        CornerRadius="8" 
                        Visibility="{Binding SettingsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <TextBlock Grid.Row="0" 
                                   Text="Settings" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextBrush}" 
                                   FontSize="16"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Start with Windows -->
                        <CheckBox Grid.Row="1"
                                  Content="Start with Windows"
                                  IsChecked="{Binding StartWithWindows}"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <!-- Start Minimized -->
                        <CheckBox Grid.Row="2"
                                  Content="Start minimized to tray"
                                  IsChecked="{Binding StartMinimized}"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <!-- Always On Top -->
                        <CheckBox Grid.Row="3"
                                  Content="Always on top"
                                  IsChecked="{Binding AlwaysOnTop}"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <!-- About Section -->
                        <TextBlock Grid.Row="5"
                                   Text="DeskminderAI v1.0"
                                   Foreground="#888888"
                                   FontSize="11"
                                   VerticalAlignment="Bottom"
                                   Margin="0,0,0,10"/>
                        
                        <!-- Close Button -->
                        <Button Grid.Row="6"
                                Content="Close"
                                Style="{StaticResource RoundedButtonStyle}"
                                Command="{Binding HideSettingsCommand}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Name="TaskbarIcon"
                       ToolTipText="DeskminderAI"
                       TrayLeftMouseDown="TaskbarIcon_TrayLeftMouseDown">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Click="OpenMenuItem_Click"/>
                    <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window> 